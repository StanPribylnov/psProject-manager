<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @project, remote: true do |f| %>
        <div class="modal-body">
          <ul class="errors"></ul>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit %>
          <%= link_to 'Cancel', '#', class: '#', data: {dismiss: 'modal'} %>
        </div>
    <% end %>
  </div>
</div>